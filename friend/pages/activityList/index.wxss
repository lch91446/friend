.page{background: #f5f5f5;font-size: 32rpx;color: #000;}
.tapbar{margin-top: 20rpx;padding: 0 30rpx;background: #fff}
.tapbar .pic{padding:20px 0;}
.tapbar .pic image{width: 100%;height: 270rpx;border-radius: 6rpx;}
.tapbar .detail{font-size:26rpx;line-height:38rpx;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;
-webkit-box-orient: vertical;}
.tapbar .detail .capsule{font-size:22rpx;border-radius:10rpx;display:inline-block;text-align:center;background:#00b1ff;
color:#fff;padding:0rpx 10rpx;margin-right:10rpx;}
.tapbar  .space{height: 40rpx;}
.past-activity .title{padding: 40rpx 0rpx 10rpx;background:#fff;color: #0092ff; font-size: 38rpx;}
.activity-item{padding-bottom: 25rpx;padding-top: 25rpx;}
.activity-list .img image{height: 140rpx;width: 210rpx;border-radius: 6rpx}
.activity-list .detail{display: flex;margin-left: 35rpx;flex-direction: column;justify-content: space-between}
.activity-list .detail .des{
font-size:26rpx;line-height:38rpx;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.activity-list .detail .time{color: #cccccc}
.none-activity{text-align: center;color: #cccccc;font-size: 28rpx;}
.border-bottom{border-bottom: solid #f5f5f5 1px}


